<div class="post card">
    <div class="card-header">
        <h2>Create New Order</h2>
    </div>
    <form class="row row-cols-lg-auto g-3 align-items-center">
        <label for="bag" class="col-sm-2 col-form-label">What can you carry with you today? (leave blank if any)</label>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="bag">
                <label class="form-check-label" for="bag">
                    Bags
                </label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="box">
                <label class="form-check-label" for="box">
                    Boxes
                </label>
            </div>
        </div>
        <div class="form-floating mb-3">
            <input type="number" min="0" class="form-control" id="bag_quantity">
            <label for="bag_quantity">No. of Bags</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" min="0" class="form-control" id="box_quantity">
            <label for="floatingInput">No. of Boxes</label>
        </div>
    </form>
    <form class="row row-cols-lg-auto g-3 align-items-center">
        <label for="canned_fruit" class="col-sm-2 col-form-label">Fruit:</label>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="canned_fruit">
                <label class="form-check-label" for="canned_fruit">
                    Canned
                </label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="dried_fruit">
                <label class="form-check-label" for="dried_fruit">
                    Dried
                </label>
            </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="any_fruit">
                <label class="form-check-label" for="any_fruit">
                    Any
                </label>
            </div>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="fruit_preference">
            <label for="fruit_preference">Preferences</label>
        </div>
    </form>
</div>
<script src="/js/order.js"></script>